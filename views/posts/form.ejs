<div class='form-group'>
  <label for='title'>Title</label>
  <input autofocus type='text' id='title' name='title' class='form-control' required <% if (locals.post) { %>value='<%= post.title %>'<% } %>>
</div>
<div class='form-group'>
  <label for='content'>Content</label>
  <textarea id='content' name='content' class='form-control' rows='20' required><% if (locals.post) { %><%= post.content %><% } %></textarea>
</div>
<% if (locals.flash) { %>
  <div class='alert alert-danger'>
    <%= locals.flash %>
  </div>
<% } %>
<p class='text-right'>
  <button type='submit' class='btn btn-primary'>
    Save
  </button>
</p>
