<main class='container'>

  <% include ../subnav %>

  <h1>Current Order</h1>
  <% if (locals.order) { %>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% order.productOrders.forEach(function(po) { %>
          <tr>
            <td><a href='/products/<%= po.product.id %>'><%= po.product.name %></a></td>
            <td>$<%= po.product.cost %></td>
            <td><%= po.quantity %></td>
            <td><%= po.cost().toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
      <tfoot>
        <td></td>
        <td></td>
        <td></td>
        <td><strong>$<%= order.cost().toFixed(2) %></strong></td>
      </tfoot>
    </table>
    <% if (locals.open) { %>
      <form method='POST' action='/orders/<%= order.id %>/cancel' enctype='multipart/form-data'>
        <div class='text-right'>
          <button type='submit' class='btn btn-danger'>
            Cancel Order
          </button>
        </div>
      </form>
    <% } %>
  <% } else { %>
    <p class='text-center'>You haven't placed an order yet.</p>
  <% } %>

</main>
