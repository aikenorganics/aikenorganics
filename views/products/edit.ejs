<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<div class='container'>
  <h1>Edit Product</h1>
  <h4><%= locals.grower.name %></h4>
  <div class='row'>
    <div class='col-md-8'>
      <form method='POST' action='/products/<%= locals.product.id %>' enctype='multipart/form-data'>
        <% include form %>
      </form>
    </div>
    <div class='col-md-4'>
      <form method='POST' action='<%= productImageUrl(product) %>' enctype='multipart/form-data'>
        <input type='hidden' name='return_to' value='<%= productEditUrl(product) %>'>
        <div class='form-group text-center'>
          <img class='img-rounded' src='<%= imageUrl(product, 'medium') %>'>
        </div>
        <div class='form-group'>
          <input type='file' name='image' class='form-control'>
        </div>
        <div class='form-group text-right'>
          <button type='submit' class='btn btn-primary'>
            Upload
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
