<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<main class='container'>

  <% include ../subnav %>

  <div class='row'>
    <div class='col-md-3 text-center'>
      <p>
        <img class='img-rounded' src='<%= imageUrl(product, 'medium') %>'>
      </p>
      <p>
        <% include ../cart/form %>
      </p>
    </div>
    <div class='col-md-9'>
      <h1><%= product.name %></h1>
      <% if (locals.admin) { %>
        <span class='pull-right'>
          <a href='/products/<%= product.id %>/edit'>Edit</a>
        </span>
      <% } %>
      $<%= product.cost %>
      per
      <%= product.unit %>
      &bull;
      <%= product.available() %> Available
      &bull;
      <a href='/growers/<%= grower.id %>'>
        <%= grower.name %>
      </a>
      &bull;
      <%= category.name %>
      <div class='clearfix'>
        <hr>
      </div>
      <%- marked(product.description) %>
    </div>
  </div>

</main>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
