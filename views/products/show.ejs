<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<div class='container'>
  <h1><%= product.name %></h1>
  <span class='pull-right'>
    <% if (locals.isAdmin) { %>
      <a href='/products/<%= product.id %>/edit'>Edit</a>
    <% } %>
  </span>
  $<%= product.cost %>
  per
  <%= product.unit %>
  &bull;
  <a href='/growers/<%= grower.id %>'>
    <%= grower.name %>
  </a>
  &bull;
  <%= product.available %> Available
  <div class='clearfix'>
    <hr>
  </div>
  <%- marked(product.description) %>
</div>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
