<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<div class='container'>
  <h1><%= product.name %></h1>
  <span class='pull-right'>
    <% if (locals.admin) { %>
      <a href='/products/<%= product.id %>/edit'>Edit</a>
    <% } %>
  </span>
  $<%= product.cost %>
  per
  <%= product.unit %>
  &bull;
  <%= product.available %> Available
  &bull;
  <a href='/growers/<%= grower.id %>'>
    <%= grower.name %>
  </a>
  &bull;
  <%= category.name %>
  <div class='clearfix'>
    <hr>
  </div>
  <div class='row'>
    <div class='col-md-8'>
      <%- marked(product.description) %>
    </div>
    <div class='col-md-4'>
      <img class='img-rounded' src='<%= imageUrl(product, 'medium') %>'>
    </div>
  </div>
</div>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
