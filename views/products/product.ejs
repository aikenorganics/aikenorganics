<div class='media'>
  <div class='pull-right'>
    <% include ../cart/form %>
  </div>
  <div class='media-left'>
    <a href='/products/<%= product.id %>'>
      <img class='img-rounded' src='<%= imageUrl(product, 'small') %>' style='max-width: 100px; max-height: 100px;'>
    </a>
  </div>
  <div class='media-body'>
    <h3 class='media-heading'>
      <a href='/products/<%= product.id %>'><%= product.name %></a>
    </h3>
    <strong>
      $<%= product.cost %> per <%= product.unit %>
      &bull;
      <%= product.available() %> Available
      <% if (product.grower) { %>
        &bull;
        <a href='/growers/<%= product.grower.id %>'>
          <%= product.grower.name %>
        </a>
      <% } %>
    </strong>
    <%- marked(product.description) %>
  </div>
</div>
