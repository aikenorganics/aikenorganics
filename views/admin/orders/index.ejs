<!doctype html>
<html>
<head>
  <% include ../../head %>
</head>
<body>

<% include ../../nav %>

<main class='container'>

  <% include ../subnav %>

  <h1>Orders</h1>
  <hr>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Email</th>
        <th>First</th>
        <th>Last</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(function(order) { %>
        <tr>
          <td><a href='/admin/orders/<%= order.id %>'>#<%= order.id %></a></td>
          <td><%= order.user.email %></td>
          <td><%= order.user.first || '-' %></td>
          <td><%= order.user.last || '-' %></td>
          <td><%= order.user.phone || '-' %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</main>

<% include ../../footer %>

<script src='/js/app.js'></script>

</body>
</html>
