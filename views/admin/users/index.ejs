<!doctype html>
<html>
<head>
  <% include ../../head %>
</head>
<body>

<% include ../../nav %>

<main class='container'>

  <% include ../subnav %>

  <h1>Users</h1>
  <hr>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Email</th>
        <th>First</th>
        <th>Last</th>
        <th>Phone</th>
        <th>Admin</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user, i) { %>
        <tr>
          <td><a class='btn btn-default btn-xs' href='/admin/users/<%= user.id %>/edit'>Edit</a></td>
          <td><%= i + 1 %></td>
          <td><%= user.email %></td>
          <td><%= user.first || '-' %></td>
          <td><%= user.last || '-' %></td>
          <td><%= user.phone || '-' %></td>
          <td><%= user.is_admin ? 'âœ“' : '-' %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</main>

<% include ../../footer %>

<script src='/js/app.js'></script>

</body>
</html>
