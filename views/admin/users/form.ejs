<div class='form-group'>
  <label for='email'>Email</label>
  <input autofocus type='text' id='email' name='email' class='form-control' <% if (locals._user) { %>value='<%= _user.email %>'<% } %>>
</div>
<div class='form-group'>
  <label for='first'>First Name</label>
  <input autofocus type='text' id='first' name='first' class='form-control' <% if (locals._user) { %>value='<%= _user.first %>'<% } %>>
</div>
<div class='form-group'>
  <label for='last'>Last Name</label>
  <input type='text' id='last' name='last' class='form-control' <% if (locals._user) { %>value='<%= _user.last %>'<% } %>>
</div>
<div class='form-group'>
  <label for='phone'>Phone Number</label>
  <input type='text' id='phone' name='phone' class='form-control' <% if (locals._user) { %>value='<%= _user.phone %>'<% } %>>
</div>
<div class='form-group'>
  <label for='member_until'>Member Until</label>
  <input type='date' id='member_until' name='member_until' class='form-control' <% if (locals._user) { %>value='<%= moment(_user.member_until).format('YYYY-MM-DD') %>'<% } %>>
</div>
<div class='form-group'>
  <label for='is_admin'>
    <input type='checkbox' id='is_admin' name='is_admin' <% if (locals._user && _user.is_admin) { %>checked<% } %>>
    Admin
  </label>
</div>
<div class='form-group'>
  <button type='submit' class='btn btn-primary'>
    Save
  </button>
</div>
