<main class='container'>

  <% include ../subnav %>

  <h1>Edit User</h1>
  <div class='row'>
    <div class='col-md-8'>
      <form method='POST' action='/admin/users/<%= _user.id %>'>
        <% include form %>
      </form>
    </div>
    <div class='col-md-4'>
      <form method='POST' action='/admin/users/<%= _user.id %>/image' enctype='multipart/form-data'>
        <input type='hidden' name='return_to' value='/admin/users/<%= _user.id %>/edit'>
        <div class='form-group text-center'>
          <img class='img-rounded' src='<%= _user.imagePath('medium') %>'>
        </div>
        <div class='form-group'>
          <input type='file' name='image' class='form-control'>
        </div>
        <div class='form-group text-right'>
          <button type='submit' class='btn btn-primary'>
            Upload
          </button>
        </div>
      </form>
    </div>
  </div>
  <% if (!_user.has_order) { %>
    <hr>
    <form method='post' action='/admin/users/<%= _user.id %>/delete' class='pull-right'>
      <button type='submit' class='btn btn-danger' data-confirm='Are you sure?'>
        Delete
      </button>
    </form>
  <% } %>
</main>
