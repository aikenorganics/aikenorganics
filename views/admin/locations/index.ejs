<main class='container'>

  <% include ../subnav %>

  <h1>
    Locations
    <a class='btn btn-default btn-xs' href='/admin/locations/new'>New Location</a>
  </h1>
  <hr>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% locations.forEach(function(location) { %>
        <tr>
          <td><a class='btn btn-default btn-xs' href='/admin/locations/<%= location.id %>/edit'>Edit</a></td>
          <td><%= location.name %></td>
          <td>
            <form class='form-inline' method='POST' action='/admin/locations/<%= location.id %>'>
              <input type='hidden' name='return_to' value='<%= req.originalUrl %>'>
              <div class='btn-group'>
                <label class='btn btn-xs <%= location.active ? 'btn-primary' : 'btn-default' %>'>
                  <input type='radio' name='active' value='1' <% if (location.active) { %>checked<% } %> onclick='this.form.submit()'>
                  Active
                </label>
                <label class='btn btn-xs <%= !location.active ? 'btn-danger' : 'btn-default' %>'>
                  <input type='radio' name='active' value='0' <% if (!location.active) { %>checked<% } %> onclick='this.form.submit()'>
                  Inactive
                </label>
              </div>
            </form>
          </td>
          <td>
            <form method='POST' class='form-inline' action='/admin/locations/<%= location.id %>/delete'>
              <input type='hidden' name='return_to' value='<%= req.originalUrl %>'>
              <button type='submit' class='btn btn-danger btn-xs' data-confirm='Are you sure?'>Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
