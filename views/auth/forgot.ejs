<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<form method='POST' action='/auth/forgot' enctype='multipart/form-data'>
  <div class='panel panel-default forgot'>
    <div class='panel-heading'>
      <h3 class='panel-title'>Forgot Password</h3>
    </div>
    <div class='panel-body'>
      <div class='form-group'>
        <label for='email'>Email</label>
        <input type='text' id='email' name='email' class='form-control' placeholder='you@example.com' required autofocus>
      </div>
      <% if (locals.error) { %>
        <div class='alert alert-danger'>
          <%= locals.error %>
        </div>
      <% } %>
    </div>
    <div class='panel-footer text-right'>
      <button type='submit' class='btn btn-primary'>
        Email My Password
      </button>
    </div>
  </div>
</form>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
