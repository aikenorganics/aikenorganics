<main class='container'>
  <h1>Account Settings</h1>
  <form method='POST' action='/settings/account'>
    <div class='form-group'>
      <label for='first'>First Name</label>
      <input autofocus type='text' id='first' name='first' class='form-control' <% if (locals._user) { %>value='<%= _user.first %>'<% } %>>
    </div>
    <div class='form-group'>
      <label for='last'>Last Name</label>
      <input type='text' id='last' name='last' class='form-control' <% if (locals._user) { %>value='<%= _user.last %>'<% } %>>
    </div>
    <div class='form-group'>
      <label for='phone'>Phone Number</label>
      <input type='text' id='phone' name='phone' class='form-control' <% if (locals._user) { %>value='<%= _user.phone %>'<% } %>>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>
        Save
      </button>
    </div>
  </form>
</main>
