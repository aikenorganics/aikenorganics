<% if (locals.errors) { %>
  <div class='alert alert-danger'>
    <p>
      <strong>Whoops!</strong> We had some trouble saving your data.
    </p>
    <ul>
      <% Object.keys(errors).forEach(function (name) { %>
        <% errors[name].forEach(function (error) { %>
          <li><%= error %></li>
        <% }) %>
      <% }) %>
    </ul>
  </div>
<% } %>
