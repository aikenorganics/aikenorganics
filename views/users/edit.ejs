<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<div class='container'>
  <h1>Edit User</h1>
  <div class='row'>
    <div class='col-md-8'>
      <form method='POST' action='/users/<%= _user.id %>' enctype='multipart/form-data'>
        <% include form %>
      </form>
    </div>
    <div class='col-md-4'>
      <form method='POST' action='/users/<%= _user.id %>/image' enctype='multipart/form-data'>
        <input type='hidden' name='return_to' value='/users/<%= _user.id %>/edit'>
        <div class='form-group text-center'>
          <img class='img-rounded' src='<%= imageUrl(_user, 'medium') %>'>
        </div>
        <div class='form-group'>
          <input type='file' name='image' class='form-control'>
        </div>
        <button type='submit' class='btn btn-primary'>
          Upload
        </button>
      </form>
    </div>
  </div>
</div>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
