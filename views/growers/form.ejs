<div class='form-group'>
  <label for='name'>Name</label>
  <input autofocus type='text' id='name' name='name' class='form-control' required <% if (locals.grower) { %>value='<%= grower.name %>'<% } %>>
</div>
<div class='form-group'>
  <label for='email'>Email</label>
  <input type='text' id='email' name='email' class='form-control' <% if (locals.grower) { %>value='<%= grower.email %>'<% } %>>
</div>
<div class='form-group'>
  <label for='url'>Url</label>
  <input type='text' id='url' name='url' class='form-control' <% if (locals.grower) { %>value='<%= grower.url %>'<% } %>>
</div>
<div class='form-group'>
  <label for='location'>Location</label>
  <input type='text' id='location' name='location' class='form-control' <% if (locals.grower) { %>value='<%= grower.location %>'<% } %>>
</div>
<div class='form-group'>
  <label for='description'>Description</label>
  <textarea rows='5' id='description' name='description' class='form-control'><% if (locals.grower) { %><%= locals.grower.description %><% } %></textarea>
</div>
<p class='text-right'>
  <button type='submit' class='btn btn-primary'>
    Save
  </button>
</p>
