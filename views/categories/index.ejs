<!doctype html>
<html>
<head>
  <% include ../head %>
</head>
<body>

<% include ../nav %>

<div class='container'>
  <h1>
    Categories
    <a class='btn btn-default btn-xs' href='/categories/new'>New Category</a>
  </h1>
  <hr>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Position</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(function(category) { %>
        <tr>
          <td><a class='btn btn-default btn-xs' href='/categories/<%= category.id %>/edit'>Edit</a></td>
          <td><%= category.name %></td>
          <td><%= category.position %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<% include ../footer %>

<script src='/js/app.js'></script>

</body>
</html>
