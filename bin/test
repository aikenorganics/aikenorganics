#!/bin/sh -e

# Failure means the database already exists.
createdb aikenorganics_test &>/dev/null || true

# Migrate the test database.
foreman run --env=.testenv sequelize db:migrate

# Fill it with fixtures.
foreman run --env=.testenv ./bin/fixtures.js

# App Tests
foreman run --env=.testenv tape test/index.js
