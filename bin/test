#!/bin/sh -e

if [ -z "$TEST" ]; then
  TEST=test
fi

# Clean up some lint
./bin/lint

# Migrate the test database.
foreman run --env=.testenv sequelize db:migrate

# Truncate some tables.
foreman run --env=.testenv ./bin/truncate

# Fill it with fixtures.
foreman run --env=.testenv ./bin/fixtures.js

# App Tests
foreman run --env=.testenv tape $TEST
