#!/bin/sh -e

# Clean up some lint
find . \
  -not -path ./node_modules/\* \
  -not -path ./public/\* \
  -iname \*.js |
xargs standard --fix

# Compile Assets
./bin/postinstall

# Reset
./bin/reset

# Server Tests
tape test/index.js

# Client Tests
mkdir -p public/js
ozy browserify test/client/index.js > public/js/test.js
tape public/js/test.js
