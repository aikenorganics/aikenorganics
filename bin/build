#!/bin/bash -e

convert public/img/emblem.png \
  -strip \
  -resize '48x48' \
  public/favicon.ico

convert public/img/emblem.png \
  -strip \
  -background 'white' \
  -flatten \
  -resize '100x100' \
  -gravity 'center' \
  -extent '129x129' \
  - | pngquant 256 > public/apple-touch-icon.png

convert public/img/logo.png \
  -strip \
  -resize 'x150' \
  - | pngquant 256 > public/img/logo-small.png

convert public/img/alex.jpg \
  -strip \
  -resize '300x300^' \
  -gravity 'center' \
  -crop '300x300+0+0' \
  -quality '70%' \
  -density '72x72' \
  public/img/alex-small.jpg

convert public/img/field-one-full.jpg \
  -strip \
  -resize '1200x800' \
  -gravity 'center' \
  -crop '1200x800+0+0' \
  -quality '50%' \
  -density '72x72' \
  public/img/field-one.jpg

convert public/img/field-two-full.jpg \
  -strip \
  -resize '1200x800' \
  -gravity 'center' \
  -crop '1200x800+0+0' \
  -quality '50%' \
  -density '72x72' \
  public/img/field-two.jpg

for file in \
  'food-basket.jpg' \
  'pen-and-pad.jpg' \
  'vegetables.png' \
  'veggies-in-boxes.jpg' \
; do
  convert "public/img/${file}" \
    -strip \
    -interlace 'Plane' \
    -resize '400x400^' \
    -gravity 'center' \
    -crop '400x400+0+0' \
    -quality '70%' \
    -density '72x72' \
    "public/img/${file%.*}-square.jpg"
done
