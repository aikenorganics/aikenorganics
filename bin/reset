#!/bin/sh -e

DB=aikenorganics_development

# Drop the test database.
dropdb --if-exists $DB

# Recreate it.
createdb $DB

# Migrate the test database.
foreman run sequelize db:migrate

# Fill it with fixtures.
foreman run ./bin/fixtures

# Reset the sequences.
psql -XAtq -f ./bin/resequence.sql $DB | psql $DB
