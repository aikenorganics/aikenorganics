#!/bin/bash -e

mkdir -p public/js

./bin/rollup.js client/routes.js > client/component.js

if [ "$NODE_ENV" = "production" ]; then
  ./bin/rollup.js client/index.js | browserify - | uglifyjs -m -c warnings=false > public/js/app.js
else
  ./bin/rollup.js client/index.js | browserify - > public/js/app.js
fi
